/* 字符串文字 */
.random-str-view{
  margin-top: 80rpx;
}
.random-string{
  color: #228b22;
  font-size: 50rpx;
  font-family: "Monokai";
}
/* 按钮父级 view */
.btn-parent{
  margin-top: 20rpx; 
  margin-right:10px;
  float:center; 
}
/*生成随机字符串按钮*/
.btn-random{
  margin-top: 20rpx; 
  margin-right:10px;
  float:left;
  width: 200rpx;
  height: 80rpx;
  background-color: #fff;
  color: #0AACC7;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #0AACC7;
}
.btn-random-hover{
  background-color: #0AACC7;
  color: #f5f5f5; 
}
/* 复制按钮 */
.btn-copy{
  margin-top: 20rpx; 
  margin-right:10px;
  float:right;
  width: 200rpx;
  height: 80rpx;
  color: #008000;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #008000;
}
.btn-copy-hover{
  color: #f5f5f5;
  background:  #008000;
}
/* 提示标语 */
.tips-text{
  color: #A7B4BB;
}
/* 滚动选择器 */
.picker {
  background-color: rgba(175, 243, 16, 0.856);
  margin-top: 30rpx;
  height: 200rpx;
  width: 300rpx;
  float: center;
}
.indicator {
  height: 80rpx;
  border-top: 2px solid #44BB16;
  border-bottom: 2px solid #44BB16;
}
.column {
  font-size: 35rpx;
  font-weight:bold;
  color: red;
  text-align: center;
  line-height: 100rpx;
}
